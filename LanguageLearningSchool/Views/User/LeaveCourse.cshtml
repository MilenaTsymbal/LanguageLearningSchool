@using LanguageLearningSchool.ViewModels;
@model LeaveCourseViewModel

<h5>Are you sure that you want to leave "@Model.Course.CourseName" course?</h5>
<div class="form-group">
    <form method="post" asp-controller="User" asp-action="ConfirmLeaveCourse" 
        asp-route-courseId="@Model.Course.CourseId">
        <div class="btn-group">
            <input type="submit" value="Confirm" class="btn btn-sm btn-outline-secondary" style="background-color: #FE6C6C;"/>
            <a class="btn btn-sm btn-outline-secondary" asp-controller="User" asp-action="UserDetail">Cancel</a>
        </div>
    </form>
</div>