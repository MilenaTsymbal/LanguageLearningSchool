@using LanguageLearningSchool.ViewModels;
@model CreateLessonTaskViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <form asp-controller="LessonTask" asp-action="Create" method="post">
        <input asp-for="LessonId" type="hidden" class="form-control">
        <div class="form-group">
            <label asp-for="TaskText">Task text</label>
            <input asp-for="TaskText" class="form-control" />
            <span asp-validation-for="TaskText" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="Answers">Answers (must be one correct answer)</label>
            <table class="table">
                <thead>
                    <tr>
                        <th style="font-weight: normal;">Answer text</th>
                        <th style="font-weight: normal;">Is correct?</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Answers.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="Answers[i].AnswerName" class="form-control" />
                                <span asp-validation-for="Answers[i].AnswerName" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="Answers[i].Correctness" type="checkbox" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <button type="submit" class="btn btn-sm btn-outline-secondary">Create</button>
    </form>
</body>
</html>