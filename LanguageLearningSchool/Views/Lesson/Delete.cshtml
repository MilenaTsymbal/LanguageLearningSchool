@model Lesson

<h5>Are you sure you want to delete this lesson?</h5>
<div class="form-group">
    <form method="post" asp-controller="Lesson" asp-action="Delete" asp-route-lessonId="@Model.LessonId">
        <div class="btn-group">
            <input type="submit" value="Confirm" class="btn btn-sm btn-outline-secondary" style="background-color: #FE6C6C;"/>
            <a class="btn btn-sm btn-outline-secondary" asp-controller="Lesson" asp-action="Detail"
                asp-route-lessonid="@Model.LessonId" asp-route-courseId="@Model.CourseId">Cancel</a>
        </div>
    </form>
</div>