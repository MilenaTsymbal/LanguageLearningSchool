@using LanguageLearningSchool.ViewModels;
@model EditLessonViewModel

<form method="post" asp-action="Edit" asp-route-id="@Model.LessonId">
        <input asp-for="CourseId" type="hidden" class="form-control">
        <input asp-for="LessonId" type="hidden" class="form-control">
        <div class="form-group">
            <label asp-for="LessonName">Lesson name</label>
            <input asp-for="LessonName" type="text" class="form-control" placeholder="Enter lesson name">
            <span asp-validation-for="LessonName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Material">Material</label>
            <input asp-for="Material" type="text" class="form-control" id="exampleInputDescription"
                placeholder="Enter the material">
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.IsTheLastLesson">Is the last lesson?</label>
            <input asp-for="@Model.IsTheLastLesson" type="checkbox" />
            <span asp-validation-for="@Model.IsTheLastLesson" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-sm btn-outline-secondary" style="margin-top: 15px">Submit changes</button>
</form>